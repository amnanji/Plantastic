<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">
    <ScrollView
        android:id="@+id/profile_preferences_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/profile_preferences"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--     Start of Username      -->
            <TextView
                android:id="@+id/username_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/your_username"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="@string/enter_a_username"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <!--     Start of food preferences       -->
            <TextView
                android:id="@+id/food_preferences_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/your_current_food_preferences"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/food_preferences_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="@string/food_preference_hint"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>


            <!--    Start of dietary restrictions     -->
            <TextView
                android:id="@+id/dietary_restrictions_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="18sp"
                android:text="@string/your_current_dietary_restrictions"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/dietary_restrictions_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:entries="@array/dietary_options"
                android:layout_marginBottom="10dp"/>

            <!--      Start of activity preferences      -->
            <TextView
                android:id="@+id/activity_preferences_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="18sp"
                android:text="@string/your_current_activity_preferences"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/activity_preferences_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="@string/food_preference_hint"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <!--      Start of availability preferences         -->
            <TextView
                android:id="@+id/availability_preferences_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/your_availability"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/monday_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Monday:"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/monday_availability_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Busy"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:id="@+id/monday_availability_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/monday_start_time_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="@string/start_button_text"/>
                <Button
                    android:id="@+id/monday_end_time_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="@string/end_button_text"/>
                <Button
                    android:id="@+id/monday_busy_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="@string/busy_button_text"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tuesday_textview"
