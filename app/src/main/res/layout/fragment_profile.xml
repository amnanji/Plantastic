                android:id="@+id/sunday_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Sunday:"
                android:layout_gravity="left"/>
            <TextView
                android:id="@+id/sunday_availability_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
