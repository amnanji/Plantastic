                <Button
                    android:id="@+id/sunday_end_time_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="@string/end_button_text"/>
